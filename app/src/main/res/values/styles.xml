<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget" />

    <style name="MyDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert"/>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />



    <style name="Toolbar.ExpandedTitleText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/toolbarTransparent</item>

    </style>

    <style name="Toolbar.CollapsedTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_shape_design</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/alegreya</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>

        <item name="hintTextColor">@color/lightGray</item>
        <!--<item name="android:layout_marginTop">2dp</item>-->
    </style>


</resources>
