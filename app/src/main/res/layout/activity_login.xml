<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Auth.LoginActivity">




    <TextView
        android:id="@+id/splashLogo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/nunito_semibold"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="28dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_40dp"

        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wellcome"
        android:layout_below="@id/splashLogo"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_40dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/nunito_bold"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SignIntoContinue"
        android:layout_below="@id/splashLogo"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:textColor="@color/darkGray"
        android:textSize="12sp"
        android:fontFamily="@font/alegreya"
        />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_normal"
            android:fontFamily="@font/alegreya"
            android:gravity="start"
            android:text="@string/Email"

            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:fontFamily="@font/nunito_semibold"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_normal"
            android:fontFamily="@font/alegreya"
            android:gravity="start"
            android:text="@string/password"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/nunito_semibold"
                android:drawablePadding="@dimen/margin_small"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/margin_small"

                />
        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_normal"
            android:fontFamily="@font/alegreya"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:text="@string/forgotPassword"
            android:textSize="14sp" />


        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/splashText4"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/rounded_button_design_"
            android:fontFamily="@font/alegreya"
            android:text="@string/signIn"
            android:textColor="@color/colorYellow"
            android:visibility="visible"
            app:button_cornerRadius="4dp"
            app:button_duration="250"
            app:button_scale="0.87"

            />






    </LinearLayout>


    <TextView
        android:id="@+id/signUpText"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_normal"
        android:fontFamily="@font/alegreya"
        android:gravity="center"
        android:text="@string/accountCreated"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</LinearLayout>